citHeader("To cite 'ptolemy' in publications please reference both:")

citEntry(entry = "Misc",
  title        = "{ptolemy}: an R package for accessing global high-resolution geography",
  author       = personList(as.person("Josh London")),
  year         = "2018",
  url          = "https://github.com/jmlondon/ptolemy",
  version      = "1.0.0",
  textVersion =
  paste("London, Josh M.",
        "ptolemy: an R package for accessing global high-resolution geography",
        "2018. Version 1.0.0. https://github.com/jmlondon/ptolemy.",
        "10.5281/zenodo.1470707")
)

citEntry(entry = "Article",
  title = "A Global Self-consistent, Hierarchical, High-resolution Shoreline Database",
