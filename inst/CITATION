  volume = "101",
  pages = "8741-8743",
  year = "1996",
  url = "http://www.soest.hawaii.edu/wessel/gshhg/",
  textVersion =
  paste("Wessel, P., and W. H. F. Smith",
        "A Global Self-consistent, Hierarchical, High-resolution Shoreline Database",
        "J. Geophys. Res., 101, 8741-8743, 1996")
)